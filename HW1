file='D:\Book.txt'
try:
    f=open(file)
except:
    print("File not found")

punctuations = '''!()-[]{};:'"\,<>./?@#$%^&*_~'''
text=""
clear=""
for i in f:
    text=text+i
for word in text:
    if word not in punctuations:
        clear=clear+word.lower()
clear=clear.split()

list=dict()
for w in clear:
    if w not in list:
        list[w]=1
    else:
        list[w]=list[w]+1
print(sorted(list.items()))
